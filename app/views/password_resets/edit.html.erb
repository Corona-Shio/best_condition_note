<% provide(:title, 'パスワードの再設定') %>
<h1>パスワードの再設定</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, url: password_reset_path(params[:id])) do |f| %>
      <%= render 'shared/error_messages', object: @user %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.label :password %>
      <div class="input-group">
        <%= f.password_field :password, class: 'form-control', id: 'password-field' %>
        <span class="input-group-btn">
          <button type="button" class="btn btn-default toggle-password" data-target="#password-field">
            <span class="glyphicon glyphicon-eye-open"></span>
          </button>
        </span>
      </div>

      <%= f.submit "パスワードの変更", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
