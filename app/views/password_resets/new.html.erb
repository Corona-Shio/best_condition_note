<% provide(:title, "パスワードの再設定") %>
<h1>パスワードの再設定</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: password_resets_path, scope: :password_reset) do |f| %>
      <%= f.label :email, t('activerecord.attributes.user.email') %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= recaptcha_tags %>

      <%= f.submit "メールを送信する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
