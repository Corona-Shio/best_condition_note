<% if logged_in? %>
  <div class="home home-container center text-center">
    <div class="row">
      <div class="col-md-12">
        
        <h1 class="main-title">べすこん！</h1>
        
        <div class="action-buttons">
          <%= link_to new_daily_record_path,
            class: "btn btn-primary btn-lg btn-block btn-custom" do %>
            <i class="glyphicon glyphicon-plus"></i> 今日の記録
          <% end %>

          <%= link_to graph_daily_records_path, data: { turbo: false },
            class: "btn btn-info btn-lg btn-block btn-custom" do %>
            <i class="glyphicon glyphicon-signal"></i> 体調グラフ
          <% end %>

          <%= link_to daily_records_path,
            class: "btn btn-success btn-lg btn-block btn-custom" do %>
            <i class="glyphicon glyphicon-list"></i> 過去の記録
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="home center jumbotron text-center">
    <h1 class="main-title">べすこんに記録して<br>最高の体調に</h1>
    <div class="button-vertical">
      <%= link_to "アカウントの登録", signup_path, class: "btn btn-lg btn-primary btn-custom" %>
      <%= link_to "ログイン", login_path, class: "btn btn-lg btn-success btn-custom" %>
    </div>
  </div>
  <div class="about">
    <div class="key-features">
      <h2>サービスの特徴</h2>
      <div class="feature-list">
        <div class="feature">
          <i class="fa fa-chart-line"></i>
          <h3>簡単な日々の記録</h3>
          <p>
            食事、睡眠、運動、メンタル、体調を<br>
            5段階で簡単に記録できます。
          </p>
        </div>
        <div class="feature">
          <i class="fa fa-chart-pie"></i>
          <h3>データの可視化</h3>
          <p>
            記録したデータをグラフで表示し<br>
            直感的に確認できます。
          </p>
        </div>
        <div class="feature">
          <i class="fa fa-search"></i>
          <h3>傾向の発見</h3>
          <p>
            記録したデータからあなたの<br>
            体調の傾向を発見できます。
          </p>
        </div>
      </div>  
    </div>
    <h2>あなたの体調がグラフで一目で分かる。</h2>
    <img src="<%= asset_url("sample_graph.png") %>" alt="サンプルグラフ" class="img-responsive center-block">
  </div>
<% end %>
