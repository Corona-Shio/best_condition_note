<% if logged_in? %>
  <div class="home-container text-center">
    <div class="row">
      <div class="col-md-12">
        <h1 class="main-title">Best Condition Note</h1>
        
        <div class="action-buttons">
          <%= link_to new_daily_record_path,
            class: "btn btn-primary btn-lg btn-block btn-custom" do %>
            <i class="glyphicon glyphicon-plus"></i> 今日の記録
          <% end %>

          <%= link_to graph_daily_records_path, data: { turbo: false },
            class: "btn btn-info btn-lg btn-block btn-custom" do %>
            <i class="glyphicon glyphicon-signal"></i> 体調グラフ
          <% end %>

          <%= link_to daily_records_path,
            class: "btn btn-success btn-lg btn-block btn-custom" do %>
            <i class="glyphicon glyphicon-list"></i> 過去の記録
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Best Condition Note</h1>
    <%= link_to "アカウントの登録", signup_path, class: "btn btn-lg btn-primary btn-custom m-5" %>
  </div>
<% end %>
