<%= turbo_frame_tag "record_#{@daily_record.id}" do %>
  <div class="table-row row-edit">
    <%= form_with(model: @daily_record) do |f| %>
      <div class="table-cell" data-label="Date">     <%= f.date_field   :date,      class: 'form-control' %></div>
      <div class="table-cell" data-label="Sleep">    <%= f.number_field :sleep,     class: 'form-control', in: 1..5, step: 1 %></div>
      <div class="table-cell" data-label="Meal">     <%= f.number_field :meal,      class: 'form-control', in: 1..5, step: 1 %></div>
      <div class="table-cell" data-label="Mental">   <%= f.number_field :mental,    class: 'form-control', in: 1..5, step: 1 %></div>
      <div class="table-cell" data-label="Training"> <%= f.number_field :training,  class: 'form-control', in: 1..5, step: 1 %></div>
      <div class="table-cell" data-label="Condition"><%= f.number_field :condition, class: 'form-control', in: 1..5, step: 1 %></div>
      <div class="table-cell" data-label="Actions">
        <div class="table-btn-group">
          <%= f.submit 'Submit', class: 'btn btn-primary submit' %>
          <%= link_to daily_record_path(@daily_record),
              class: 'btn btn-warning cancel' do %>
            <i class="glyphicon glyphicon-remove"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
